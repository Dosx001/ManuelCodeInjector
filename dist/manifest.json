{
  "manifest_version": 2,
  "name": "Script Injector",
  "version": "1.0.0",
  "description": "Inject custom scripts using hotkeys",
  "permissions": [
    "<all_urls>",
    "activeTab",
    "storage",
    "tabs",
    "unlimitedStorage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "@manualcodeinjector"
    }
  },
  "icons": {
    "16": "./icons/icon-16.png",
    "48": "./icons/icon-48.png",
    "128": "./icons/icon-128.png"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "./icons/icon-48.png",
    "default_popup": "./popup/index.html",
    "default_title": "Script Injector"
  },
  "options_ui": {
    "browser_style": true,
    "open_in_tab": true,
    "page": "./options/index.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "main.js"
      ]
    }
  ]
}
